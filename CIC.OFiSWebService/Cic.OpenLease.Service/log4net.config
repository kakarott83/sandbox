<?xml version="1.0" encoding="utf-8" ?>

<log4net>

  <category name="LoggingExample">
    <priority value="ALL" />
  </category>

  <logger name="Cic.Common.Web.Services.Protocols">
    <level value="ALL"/>
    <appender-ref ref="SOAPAppender" />
	<appender-ref ref="DurationAppender" />
  </logger>
  
  <appender name="UdpAppender" type="log4net.Appender.UdpAppender">
    <remoteAddress value="127.0.0.2" />
    <remotePort value="7071" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" /> 
  </appender>   

  <appender name="XMLFileAppender" type="log4net.Appender.FileAppender">
    <file value="C:\temp\logaida.xml" />
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
  </appender>

  <appender name="LogFileAppender"  type="log4net.Appender.RollingFileAppender" >

    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Size" />
    <param name="MaxSizeRollBackups" value="10" />
    <param name="MaximumFileSize" value="10024KB" />
    <param name="StaticLogFileName" value="true" />
    <file type="log4net.Util.PatternString" value="Service.log" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="&#13;&#10;Started Logging&#13;&#10;"/>
      <param name="Footer" value="Logging stopped&#13;&#10;"/>
      <param name="ConversionPattern" value="%n%d [%t] %-5p %c [%x]- %m%n"  />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="FATAL" />
    </filter>
  </appender>
  <appender name="SOAPAppender"  type="log4net.Appender.RollingFileAppender" >
	<filter type="log4net.Filter.StringMatchFilter">
		<stringToMatch value="Envelope xmlns" />
	</filter>
	<filter type="log4net.Filter.DenyAllFilter" />
    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Size" />
    <param name="MaxSizeRollBackups" value="10" />
    <param name="MaximumFileSize" value="1024KB" />
    <param name="StaticLogFileName" value="true" />
    <file type="log4net.Util.PatternString" value="SOAP-[%processid].log" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="&#13;&#10;Started Logging&#13;&#10;"/>
      <param name="Footer" value="Logging stopped&#13;&#10;"/>
      <param name="ConversionPattern" value="%n%d [%t] %-5p %c [%x]- %m%n"  />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="FATAL" />
    </filter>
  </appender>
  <appender name="DurationAppender"  type="log4net.Appender.RollingFileAppender" >
	<filter type="log4net.Filter.StringMatchFilter">
		<stringToMatch value="Duration of" />
	</filter>
	<filter type="log4net.Filter.DenyAllFilter" />
    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Size" />
    <param name="MaxSizeRollBackups" value="10" />
    <param name="MaximumFileSize" value="1024KB" />
    <param name="StaticLogFileName" value="true" />
    <file type="log4net.Util.PatternString" value="Duration-[%processid].log" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="&#13;&#10;Started Logging&#13;&#10;"/>
      <param name="Footer" value="Logging stopped&#13;&#10;"/>
      <param name="ConversionPattern" value="%n%d [%t] %-5p %c [%x]- %m%n"  />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="DEBUG" />
      <param name="LevelMax" value="FATAL" />
    </filter>
  </appender>
  

  <appender name="ConsoleAppender"
            type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern"           value="%d [%t] %-5p %c [%x] %X{auth} - %m%n"  />

    </layout>
  </appender>

  <root>
    <!-- OFF, FATAL, ERROR, WARN, DEBUG, INFO, ALL -->
    <level value="DEBUG" />
    <appender-ref ref="LogFileAppender" />
	<appender-ref ref="DurationAppender" />
    </root>

</log4net>
